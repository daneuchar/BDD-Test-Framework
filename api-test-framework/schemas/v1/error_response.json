{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ErrorResponse",
  "description": "Schema for standard API error responses.",
  "type": "object",
  "required": ["error", "message"],
  "additionalProperties": false,
  "properties": {
    "error": {
      "type": "string",
      "minLength": 1
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "details": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["field", "message"],
        "properties": {
          "field": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "statusCode": {
      "type": "integer"
    }
  }
}
